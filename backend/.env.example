# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/internet_banking
DB_NAME=internet_banking

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-256-bit-key
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production-use-256-bit-key
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log